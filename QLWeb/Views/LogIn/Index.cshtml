@model int
@{
    ViewBag.Title = "Index";
}

<form method="post" action="Index">
    <link rel="stylesheet" href="../Content/assets/admin/css/LogIn/style.css" />
    <table>
        <tr>
            <td colspan="2" class="td1">Đăng nhập</td>
        </tr>

        <tr>
            <td class="td2">Tài khoản :</td>
            <td><input type="text" placeholder="Nhập tài khoản" name="UserName" /></td>
        </tr>

        <tr>
            <td class="td2">Mật khẩu :</td>
            <td><input type="password" placeholder="Nhập mật khẩu" name="PassWord" /></td>
        </tr>

        <tr>
            <td colspan="2" class="td1">
                <input type=submit name="btnreset" value="Xóa trắng">
                <input type=submit name="btnsubmit" value="Đăng nhập">
            </td>
        </tr>
    </table>
    @if (Model == 3)
    {
        <p>Tài khoản hoặc mật khẩu không đúng</p>
    }
    @if (Model == 2)
    {
        <p>Chúc mừng bạn đăng nhập thành công</p>
        <meta http-equiv="refresh" content="2;http://localhost:8166/Home">
    }
</form>

